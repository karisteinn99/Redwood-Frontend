{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "@components/*": ["app/components/*"]
    },
    "target": "esnext", // Modern target for better performance
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true, // Enforces strict type-checking
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Speeds up builds by skipping type checks on libraries
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx", // Use the new JSX runtime for React 17+
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
